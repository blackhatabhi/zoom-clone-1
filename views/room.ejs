<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link href="style.css" rel="stylesheet" />
    <!-- <link
      href="https://bootswatch.com/4/slate/bootstrap.min.css"
      rel="stylesheet"
    /> -->
    <script src="/socket.io/socket.io.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <title>Zoom Clone</title>
    <script>
      const ROOM_ID = "<%= room_id %>";
    </script>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__leftVideo">
          <div id="video-grid"></div>
        </div>
        <div class="main__leftControls">
          <div class="main__leftControls__Block">
            <div class="main__leftControls__Buttons">
              <i class="fas fa-microphone"></i><span>Mute</span>
            </div>
            <div class="main__leftControls__Buttons">
              <i class="fas fa-video"></i><span>Stop Video</span>
            </div>
          </div>
          <div class="main__leftControls__Block">
            <div class="main__leftControls__Buttons">
              <i class="fas fa-shield-alt"></i><span>Security</span>
            </div>
            <div class="main__leftControls__Buttons">
              <i class="fas fa-users"></i><span>Participants</span>
            </div>
            <div class="main__leftControls__Buttons">
              <i class="fas fa-comment-alt"></i><span>Chat</span>
            </div>
          </div>
          <div class="main__leftControls__Block">
            <div class="main__leftControls__ButtonsLeave">
              <span>Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__rightHeader">
          <h5>Chats</h5>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="script.js"></script>
  </body>
</html>
